{% extends 'base.html.twig' %}

{% block title %}Nouvel Utilisateur{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Créer un utilisateur</h1>

        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            {{ form_start(form) }}
                
                <div class="mb-4">
                    {{ form_row(form.firstname, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(form.lastname, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                </div>
                <div class="mb-4">
                    {{ form_row(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                </div>
                
                {# Le champ Password s'affichera ici uniquement #}
                {% if form.password is defined %}
                    <div class="mb-4">
                        {{ form_row(form.password, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                    </div>
                {% endif %}

                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2">Rôles</label>
                    <div class="flex gap-4">
                        {% for child in form.roles %}
                            <div class="flex items-center">
                                {{ form_widget(child, {'attr': {'class': 'mr-2 leading-tight'}}) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'text-sm'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="flex items-center justify-between mt-6">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Enregistrer
                    </button>
                    <a href="{{ path('app_user_index') }}" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                        Annuler
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}