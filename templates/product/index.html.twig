{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Nos Produits</h1>
        
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_product_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                + Ajouter un produit (Multi-étapes)
            </a>
        {% endif %}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for product in products %}
            <div class="bg-white rounded-lg shadow-md p-6 border-l-4 {{ product.type == 'numerique' ? 'border-purple-500' : 'border-blue-500' }}">
                <div class="flex justify-between items-start">
                    <h2 class="text-xl font-bold mb-2">{{ product.name }}</h2>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded text-white {{ product.type == 'numerique' ? 'bg-purple-500' : 'bg-blue-500' }}">
                        {{ product.type }}
                    </span>
                </div>
                
                <p class="text-gray-600 mb-4 h-12 overflow-hidden">{{ product.description }}</p>
                <div class="text-2xl font-bold text-gray-800 mb-4">{{ product.price }} €</div>

                <div class="text-sm text-gray-500 mb-4">
                    {% if product.type == 'physique' %}
                        Stock: {{ product.stock }}
                    {% else %}
                        Licence numérique
                    {% endif %}
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="flex justify-end gap-2 mt-4 pt-4 border-t border-gray-100">
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
                        
                        <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Supprimer ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="text-red-500 hover:underline">Supprimer</button>
                        </form>
                    </div>
                {% endif %}
            </div>
        {% else %}
            <p class="text-center col-span-3 text-gray-500">Aucun produit pour le moment.</p>
        {% endfor %}
    </div>
{% endblock %}