{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Tableau de bord</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm mt-1">Vue d'ensemble de votre activité.</p>
        </div>
    </div>

    {# --- CARTES DE STATISTIQUES --- #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        
        {% if is_granted('ROLE_ADMIN') %}
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border-l-4 border-purple-500 hover:shadow-md transition">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-100 text-purple-600 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Utilisateurs</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">{{ stats.users }}</p>
                </div>
            </div>
            <div class="mt-4">
                <a href="{{ path('app_user_index') }}" class="text-sm font-medium text-purple-600 hover:text-purple-800">
                    Gérer les accès &rarr;
                </a>
            </div>
        </div>
        {% endif %}

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border-l-4 border-blue-500 hover:shadow-md transition">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Produits</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">{{ stats.products }}</p>
                </div>
            </div>
            <div class="mt-4">
                <a href="{{ path('app_product_index') }}" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                    Voir le catalogue &rarr;
                </a>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 border-l-4 border-green-500 hover:shadow-md transition">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-xs font-bold uppercase tracking-wider">Clients</p>
                    <p class="text-2xl font-bold text-gray-800 dark:text-white">{{ stats.clients }}</p>
                </div>
            </div>
            <div class="mt-4">
                <a href="{{ path('app_client_index') }}" class="text-sm font-medium text-green-600 hover:text-green-800">
                    Gérer les clients &rarr;
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700 flex justify-between items-center bg-gray-50 dark:bg-gray-900">
            <h3 class="font-bold text-gray-800 dark:text-white text-lg flex items-center gap-2">
                Derniers inscrits
            </h3>
            <a href="{{ path('app_client_index') }}" class="text-sm font-medium text-blue-600 hover:text-blue-800 transition">
                Voir tous les clients &rarr;
            </a>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr>
                        <th class="px-6 py-4 bg-gray-50 dark:bg-gray-700 text-xs font-bold text-gray-500 dark:text-gray-300 uppercase tracking-wider">Client</th>
                        <th class="px-6 py-4 bg-gray-50 dark:bg-gray-700 text-xs font-bold text-gray-500 dark:text-gray-300 uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-4 bg-gray-50 dark:bg-gray-700 text-xs font-bold text-gray-500 dark:text-gray-300 uppercase tracking-wider text-right">#ID</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                    {% for client in latestClients %}
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm shadow-md mr-6">
                                        {{ client.firstname|first|upper }} {{ client.lastname|first|upper }}
                                    </div>
                                    <div>
                                        <div class="text-sm font-bold text-gray-900 dark:text-white group-hover:text-blue-500 transition-colors">
                                            {{ client.firstname }} {{ client.lastname }}
                                        </div>
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                            Actif
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-600 dark:text-gray-300 flex items-center mb-1">
                                    {{ client.email }}
                                </div>
                                {% if client.phoneNumber %}
                                <div class="text-sm text-gray-500 dark:text-gray-400 flex items-center">
                                    {{ client.phoneNumber }}
                                </div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                #{{ client.id }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-6 py-10 text-center text-gray-500 dark:text-gray-400 italic bg-gray-50 dark:bg-gray-900">
                                Aucun client enregistré.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}