{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">{{ title }}</h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_row(form.firstname, {'attr': {'class': 'w-full border p-2 rounded'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.lastname, {'attr': {'class': 'w-full border p-2 rounded'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.email, {'attr': {'class': 'w-full border p-2 rounded'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.phonenumber, {'attr': {'class': 'w-full border p-2 rounded'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.address, {'attr': {'class': 'w-full border p-2 rounded'}}) }}
            </div>

            <div class="flex justify-between items-center mt-6">
                <a href="{{ path('app_client_index') }}" class="text-gray-500 hover:underline">Annuler</a>
                <button class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded">
                    Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}