        <h1 class="text-3xl font-bold text-gray-800">Nos Clients</h1>
        <a href="{{ path('app_client_new') }}" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            + Ajouter un client
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for client in clients %}
            <div class="bg-white p-6 rounded-lg shadow border-l-4 border-green-500">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-bold">{{ client.name }}</h2>
                    {% if client.company %}
                        <span class="text-xs bg-gray-200 text-gray-700 py-1 px-2 rounded">{{ client.company }}</span>
                    {% endif %}
                </div>
                
                <p class="text-gray-600 mb-1">ðŸ“§ <a href="mailto:{{ client.email }}" class="hover:underline">{{ client.email }}</a></p>
