{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Nos Clients</h1>
        <a href="{{ path('app_client_new') }}" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            + Ajouter un client
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for client in clients %}
            <div class="bg-white p-6 rounded-lg shadow border-l-4 border-green-500">
                <div class="mb-4">
                    {# TON CODE ICI #}
                    <h2 class="text-xl font-bold">{{ client.firstname }} {{ client.lastname }}</h2>
                    <p class="text-gray-600 mb-1">ğŸ“§ {{ client.email }}</p>
                    <p class="text-gray-600 mb-1">ğŸ“ {{ client.phoneNumber }}</p>
                    <p class="text-gray-500 text-sm mb-4">ğŸ  {{ client.address }}</p>
                </div>

                <div class="flex justify-end gap-3 mt-4 pt-4 border-t border-gray-100">
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MANAGER') %}
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="text-blue-500 hover:text-blue-700">Modifier</a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Supprimer ce client ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                            <button class="text-red-500 hover:text-red-700">Supprimer</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="col-span-3 text-center text-gray-500 py-10">
                Aucun client enregistrÃ©.
            </div>
        {% endfor %}
    </div>
{% endblock %}